<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        min-height: 100vh;
        background: linear-gradient(to bottom, #44107A, #000000);
        font-family: Arial, sans-serif;
        padding: 2rem;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .search-section {
        text-align: center;
        margin-bottom: 3rem;
    }

    h1 {
        color: white;
        font-size: 2.5rem;
        margin-bottom: 2rem;
    }

    .search-bar {
        position: relative;
        max-width: 600px;
        margin: 0 auto;
    }

    .search-input {
        width: 100%;
        padding: 1rem 3rem 1rem 1.5rem;
        border-radius: 9999px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 1.125rem;
        outline: none;
    }

    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .search-input:focus {
        box-shadow: 0 0 0 2px rgba(168, 85, 247, 0.5);
    }

    .search-icon {
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        width: 24px;
        height: 24px;
        opacity: 0.5;
    }

    .recent-artists {
        margin-top: 3rem;
    }

    .recent-artists h2 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .artists-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1.5rem;
        list-style: none;
    }

    .artist-item {
        text-align: center;
    }

    .artist-image-container {
        position: relative;
        width: 100px;
        height: 100px;
        margin: 0 auto 0.75rem;
        cursor: pointer;
    }

    .artist-image {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .artist-image-container:hover .artist-image {
        transform: scale(1.05);
    }

    .artist-image-container::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background: rgba(168, 85, 247, 0.2);
        opacity: 0;
        transition: opacity 0.3s;
    }

    .artist-image-container:hover::after {
        opacity: 1;
    }

    .artist-name {
        color: white;
        font-size: 0.875rem;
        font-weight: 500;
    }

    @media (max-width: 768px) {
        .artists-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
    <div class="container">
        <div class="search-section">
            <h1>Who do you want to listen today?</h1>
            <div class="search-bar">
                <input type="text" class="search-input" placeholder="Search for artists...">
                <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
            </div>
        </div>

        <div class="recent-artists">
            <h2>Your recent artists</h2>
            <ul class="artists-grid">
                <li class="artist-item">
                    <div class="artist-image-container">
                        <img src="/images/profile-pic.jpg" alt="Taylor Swift" class="artist-image">
                    </div>
                    <p class="artist-name">Taylor Swift</p>
                </li>
                <li class="artist-item">
                    <div class="artist-image-container">
                        <img src="/images/profile-pic.jpg" alt="Ed Sheeran" class="artist-image">
                    </div>
                    <p class="artist-name">Ed Sheeran</p>
                </li>
                <li class="artist-item">
                    <div class="artist-image-container">
                        <img src="/images/profile-pic.jpg" alt="The Weeknd" class="artist-image">
                    </div>
                    <p class="artist-name">The Weeknd</p>
                </li>
                <li class="artist-item">
                    <div class="artist-image-container">
                        <img src="/images/profile-pic.jpg" alt="Billie Eilish" class="artist-image">
                    </div>
                    <p class="artist-name">Billie Eilish</p>
                </li>
            </ul>
        </div>
    </div>
