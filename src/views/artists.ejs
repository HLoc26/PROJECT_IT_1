<style>
    .container {
        min-height: 100vh;
        background: linear-gradient(to bottom, #44107A, #000000);
        font-family: Arial, sans-serif;
        padding: 2rem;
        overflow: hidden;
    }

    .search-section {
        text-align: center;
        margin-bottom: 3rem;
    }

    h1 {
        color: white;
        font-size: 2.5rem;
        margin-bottom: 2rem;
    }

    .search-bar {
        position: relative;
        max-width: 600px;
        margin: 0 auto;
        border-radius: 1%;
    }

    .search-input {
        width: 100%;
        padding: 1rem 3rem 1rem 1.5rem;
        border-radius: 9999px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 1.125rem;
        outline: none;
    }

    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .search-input:focus {
        box-shadow: 0 0 0 2px rgba(168, 85, 247, 0.5);
    }

    .search-icon {
        position: absolute;
        right: 1.5rem;
        top: 50%;
        border-radius: 100%;
        transform: translateY(-50%);
        width: 24px;
        height: 24px;
        opacity: 0.5;
    }

    .recommended-artists {
        margin-top: 3rem;
        padding: 0 2rem;
    }

    .recommended-artists h2 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .artists-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 2rem;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .artist-item {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .artist-image-container {
        position: relative;
        width: 120px;
        height: 120px;
        margin-bottom: 0.75rem;
        cursor: pointer;
        overflow: hidden; /* Hide overflow from scale effect */
        border-radius: 50%; /* Ensure container is also circular */
    }

    .artist-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
        display: block;
    }

    .artist-image-container:hover .artist-image {
        transform: scale(1.05);
    }

    .artist-overlay {
        position: absolute;
        inset: 0;
        background: rgba(168, 85, 247, 0.2);
        opacity: 0;
        transition: opacity 0.3s;
        pointer-events: none; /* Ensure overlay doesn't interfere with hover */
        border-radius: 50%;
    }

    .artist-image-container:hover .artist-overlay {
        opacity: 1;
    }

    .artist-name {
        color: white;
        font-size: 0.875rem;
        font-weight: 500;
        margin: 0;
        padding: 0;
    }

    @media (max-width: 1200px) {
        .artists-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @media (max-width: 992px) {
        .artists-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 768px) {
        .artists-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

<div class="container">
    <div class="search-section">
        <h1>Who do you want to listen to today?</h1>
        <div class="search-bar">
            <form action="/" method="GET">
                <input 
                    type="text" 
                    class="search-input" 
                    name="search"
                    placeholder="Search for artists..." 
                    value="<%= searchQuery %>"
                >
                <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
            </form>
        </div>
    </div>

    <div class="recommended-artists">
        <h2>Recommended for you</h2>
        <ul class="artists-grid">
            <% artists.forEach(artist => { %>
                <li class="artist-item">
                    <div class="artist-image-container">
                        <img src="<%= artist.imageUrl %>" alt="<%= artist.name %>" class="artist-image">
                        <div class="artist-overlay"></div>
                    </div>
                    <p class="artist-name"><%= artist.name %></p>
                </li>
            <% }); %>
        </ul>
    </div>
    
</div>

