<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Musica</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <!-- Sidebar Section -->
        <div class="sidebar">
            <div class="logo">
                <img src="/images/pinterest_profile_image.png" alt="Musica Logo">
            </div>
            
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="#">Search</a></li>
                <li><a href="#">Library</a></li>
                <li><a href="#">Create Playlist</a></li>
                <li><a href="#">Liked Songs</a></li>
                <li><a href="#">Your Episodes</a></li>
            </ul>
            <div class="sub-menu">
                <ul>
                    <li><a href="#">FAV</a></li>
                    <li><a href="#">Daily Mix 1</a></li>
                    <li><a href="#">Discover Weekly</a></li>
                    <li><a href="#">K-pop</a></li>
                    <li><a href="#">Dance/Electronic Mix</a></li>
                    <li><a href="#">EDM/Popular</a></li>
                </ul>
            </div>
            <div class="install-app">Install App</div>
        </div>

        <!-- Main Content Section -->
        <div class="main-content">
            <div class="top-header">
                <div class="header-left">
                    <button class="nav-button" onclick="window.location.href='./index.html'">
                        <i class="bi bi-arrow-left-circle"></i> 
                    </button>
                    <button class="nav-button" onclick="history.forward()">
                         <i class="bi bi-arrow-right-circle"></i>
                    </button>
                    <h1>Welcome, L&S</h1>
                </div>
                
                <div class="header-right">
                    <div class="user-profile" onclick="toggleDropdown()">
                        <div class="avatar">
                            <img src="/images/profile-pic.jpg" alt="User Avatar">
                        </div>
                        <div class="dropdown-menu">
                            <div class="profile-info">
                                <img src="/images/profile-pic.jpg" alt="User Avatar">
                                <span>Angel</span>
                            </div>
                            <a href="#">Account</a>
                            <a href="#">Profile</a>
                            <a href="#">Log out</a>
                        </div>
                    </div>
                </div>
            </div>
            

            <div class="middle-header">
                <h1>Playlist Recommendation</h1>
                <div class="playlist-display" id="playlistDisplay">
                    <!-- Playlist cards will be generated here -->
                </div>
            </div>
            
            
            <div class="middle-header">
                <h1>Artists You May Like</h1>
                <div class="artist-display" id="artistDisplay">
                    <!-- Artist cards will be generated here -->
                </div>
            </div>
            </div>
        </div>

        <!-- Footer Player Section -->
        <div class="footer-player">
            <div class="current-song">Listening on ASUS-ROG...</div>
            <div class="player-controls">
                <button>Play</button>
                <button>Pause</button>
                <button>Next</button>
            </div>
        </div>
    </div>

    <script src="/js/script.js"></script>
</body>

</html>
