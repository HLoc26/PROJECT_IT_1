<div id="playlist-popup-container" style="display: none;">
    <div class="playlist-popup">
        <div class="popup-content">
            <h3>Manage Track in Playlists</h3>
            <p class="popup-error"></p>
            <div class="playlists">Loading...</div>
            <div class="popup-controls">
                <button class="save-playlists" onclick="savePlaylist()">Save</button>
                <button class="cancel-playlists" onclick="closePlaylist()">Cancel</button>
            </div>
        </div>
    </div>
</div>