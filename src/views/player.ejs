<link rel="stylesheet" href="/css/player.css">
<div class="footer-player">
    <div class="player-song-info">
        <img class="player-album-img" src="/images/albums/default.jpg" alt="Album Cover">
        <div class="player-song-details">
            <span class="player-track-title">Track Title</span>
            <span class="player-track-artist">Track Artist</span>
        </div>
    </div>
    <div class="player-controls">
        <div class="player-control-btn">
            <button onclick="prevAudio()" class="control-btn prev-btn"><i class="bi bi-skip-backward-fill"></i></button>
            <button onclick="playAudio()" class="control-btn play-btn"><i class="bi bi-play-fill"></i></button>
            <button onclick="nextAudio()" class="control-btn next-btn"><i class="bi bi-skip-forward-fill"></i></button>
        </div>
        <div class="progress-bar">
            <input type="range" id="progress" value="0" min="0" max="100" step="1" class="progress-input"
                onchange="setProgress()">
        </div>
    </div>
    <div class="player-volume">
        <i id="volume-icon" class="bi bi-volume-down-fill"></i>
        <input type="range" id="volume" value="100" min="0" max="100" step="1" class="volume-input"
            onchange="setVolume()">
    </div>
</div>

<audio id="audio-player">
    <source src="" type="audio/mp3">
</audio>

<script src="/js/player.js"></script>