<link rel="stylesheet" href="/css/tracks.css">
<div class="container">
    <div class="header-section">
        <button class="upload-btn">
            <i class="bi bi-cloud-upload upload-icon"></i>
            Upload Music
        </button>
    </div>

    <!-- Liked Tracks Section -->
    <div class="tracks-section">
        <h2>Liked Tracks</h2>
        <ul class="tracks-grid">
            <% tracks.forEach(track => { %>
                <li class="track-item">
                    <a href="#" onclick="playTrack('<%= track.track_mp3_path %>', '<%= track.track_title %>', '<%= track.artist_name %>')" class="track-link">
                        <div class="track-image-container">
                            <!-- Default image that will be replaced by JavaScript -->
                            <img 
                                src="<%= track.artist_pic %>"
                                alt="<%= track.track_title %>"
                                class="track-image"
                                data-title="<%= track.track_title %>">
                            <div class="track-overlay">
                                <i class="bi bi-play-circle play-icon"></i>
                            </div>
                        </div>
                        <div class="track-info">
                            <h3 class="track-title"><%= track.track_title %></h3>
                            <p class="artist-name"><%= track.artist_name %></p>
                        </div>
                    </a>
                </li>
                
                
            <% }); %>
        </ul>
    </div>

    <!-- Top Tracks Section -->
    <div class="tracks-section">
        <h2>Top Tracks</h2>
        <ul class="top-tracks-list">'
            
            <% Array(5).fill().forEach((_, i) => { %>
                <li>
                    <div class="track-row">
                        <div class="track-image-container">
                            <img 
                                src="/api/placeholder/400/400"
                                alt="Top Track <%= i + 1 %>"
                                class="track-image">
                            <div class="track-overlay">
                                <i class="bi bi-play-circle play-icon"></i>
                            </div>
                        </div>
                        <div class="track-info">
                            <h3 class="track-title">Popular Track <%= i + 1 %></h3>
                            <p class="artist-name">Top Artist <%= i + 1 %></p>
                        </div>
                        <span class="track-duration">3:4<%= i %></span>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</div>