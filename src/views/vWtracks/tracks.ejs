<!-- views/tracks.ejs -->
<h2>Recommended Tracks</h2>
<ul>
    <% tracks.forEach(track=> { %>
        <li>
            <a href="#" class="song-link"
                data-mp3-path="<%= track.track_mp3_path %>"
                data-title="<%= track.track_title %>"
                data-artist="<%= track.artist_name %>"
            >
                <%= track.track_title %> - <%= track.artist_name %>
            </a>
        </li>
        <% }) %>
</ul>