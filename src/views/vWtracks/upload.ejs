<!-- Just making this looks good, dont reuse -->
<style>

        /* Keep original spacing */
        form {
            padding: 25px;
            background-color: #16213e;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            color: #e6e6fa;
            box-sizing: border-box;
        }

        form fieldset {
            display: flex;
            flex-direction: column;
            border: 2px solid #533483;
            border-radius: 8px;
            width: 100%;
            margin: 0;  /* Reset any browser default margins */
            box-sizing: border-box;
        }

        form fieldset * {
            padding: 5px;
            box-sizing: border-box;
        }

        /* Make containers full width */
        form fieldset > div {
            width: 100%;
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
        }

        /* Additional styling */
        form legend {
            color: #e6e6fa;
            font-size: 1.2rem;
        }

        form label {
            color: #b8b8ff;
            font-weight: 500;
        }

        form input[type="text"],
        form input[type="file"],
        form textarea {
            background-color: #2a2a4a;
            border: 2px solid #533483;
            border-radius: 6px;
            color: #e6e6fa;
            transition: all 0.3s ease;
            width: 100%;
            box-sizing: border-box;
        }

        form input[type="text"]:focus,
        form input[type="file"]:focus,
        form textarea:focus {
            outline: none;
            border-color: #9681eb;
            box-shadow: 0 0 0 2px rgba(150, 129, 235, 0.2);
        }

        form input[type="text"]:hover,
        form input[type="file"]:hover,
        form textarea:hover {
            border-color: #9681eb;
        }

        form div:has(input[type="checkbox"]) {
            flex-direction: row !important;
            align-items: center;
            gap: 5px;
        }

        form input[type="checkbox"] {
            width: 18px;
            height: 18px;
            accent-color: #533483;
        }

        form button[type="submit"] {
            background-color: #533483;
            color: #e6e6fa;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            box-sizing: border-box;
            margin-top: 25px;
        }

        form button[type="submit"]:hover {
            background-color: #9681eb;
            transform: translateY(-2px);
        }

        form button[type="submit"]:active {
            transform: translateY(0);
        }

        form input[type="file"]::file-selector-button {
            background-color: #533483;
            color: #e6e6fa;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        form input[type="file"]::file-selector-button:hover {
            background-color: #9681eb;
        }
    </style>

<form action="" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Input file info</legend>
        <div>
            <label for="upload-track-name">Track name</label>
            <input type="text" id="upload-track-name" name="upload_track_name">
        </div>
        <div>
            <label for="mp3-upload">Choose mp3 file</label>
            <input type="file" name="mp3_file" id="mp3-upload" accept="audio/*">
        </div>
        <div>
            <label for="visibility">Visibility</label>
            <input type="checkbox" name="visibility" id="visibility">
        </div>
        <label for="upload-lyrics">Lyrics</label>
        <textarea name="upload_lyrics" id="upload-lyrics" rows="30"></textarea>
    </fieldset>

    <button type="submit">Upload</button>

</form>