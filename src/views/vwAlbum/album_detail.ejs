<link rel="stylesheet" href="/css/artist-album.css">
<div class="artist-page">
    <div class="artist-header">
        <img src="<%= artist.artist_pic_path %>" alt="<%= artist.artist_name %>">
        <h1><%= artist.artist_name %></h1>
    </div>
    <%- include("../partials/likeBtn", {liked: liked, type: "album", id: album.album_id}) %>
    <div class="album-info">
        <h2><%= album.album_name %></h2>
        <div class="album-cover">
            <img src="<%= album.album_cover_image %>" alt="<%= album.album_name %>">
        </div>
        <div class="songs-list">
            <h2>Songs</h2>
            <%- include('../partials/track_list', {tracks: tracks}) %>
        </div>
    </div>
</div>