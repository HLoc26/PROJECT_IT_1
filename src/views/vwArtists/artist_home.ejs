
    <link rel="stylesheet" href="/css/container.css">
    <style>
        .artist-page {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 0;
        }
        .artist-header {
            position: relative;
            text-align: left; /* Align text to the left */
            overflow: hidden;
            width: 100%; /* Full width */
            height: 300px; /* Fixed height for rectangular shape */
        }
        .artist-header img {
            width: 100%;
            height: 100%; /* Fill height */
            object-fit: cover; /* Crop image to fill the container */
            filter: brightness(0.7);
        }
        .artist-header h1 {
            position: absolute;
            bottom: 10px; /* Position at the bottom */
            left: 10px; /* Align to the left */
            color: white;
            text-shadow: 1px 1px 2px black;
            font-size: 2.5em;
            margin: 0;
        }
        .songs-list, .artist-description {
    padding: 20px;
    background-color: #4a6e97;
    margin: 20px;
    border-radius: 8px;
}

.songs-list h2, .artist-description h2 {
    margin-bottom: 10px;
    font-size: 1.5em;
}

.songs-list ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.songs-list li {
    padding: 10px 20px;
    border-bottom: 1px solid #333;
}

.songs-list li:last-child {
    border-bottom: none;
}

#more-button {
    background-color: #4CAF50;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

#more-button:hover {
    background-color: #3e8e41;
}
        .playlist-display {
            display: flex; /* Use flexbox for horizontal layout */
            overflow-x: auto; /* Enable horizontal scrolling */
            padding: 10px 0; /* Space above and below the playlist */
            scrollbar-width: none; /* For Firefox */
            margin: 20px; /* Added margin for consistency */
        }

        .playlist-display::-webkit-scrollbar {
            display: none; /* For Chrome, Safari, and Opera */
        }

        .playlist-card {
            min-width: 150px; /* Minimum width for each card (increase as needed) */
            margin-right: 15px; /* Space between cards */
            text-align: center; /* Center text under image */
        }

        .playlist-card img {
            width: 150px; /* Set a larger fixed width for images */
            height: 150px; /* Set a larger fixed height for images */
            object-fit: cover; /* Ensure images cover the area */
            border-radius: 4px; /* Optional: Rounded corners */
        }
    </style>
<div class="artist-page">

    <div class="artist-header">
        <!-- Artist Picture -->
        <img src="<%= artist.artist_pic_path %>" alt="<%= artist.artist_name %>">
        <!-- Artist Name Overlay -->
        <h1><%= artist.artist_name %></h1>
    </div>

    <div>
        <h2>Albums</h2>
        <ul>
            <% albums.forEach(album => { %>
                <li>
                    <!-- Call to artist's albums page -->
                    <a href="/artist/<%= artist.artist_id %>/album/<%= album.album_id %>">
                        <img src="<%= album.album_cover_image %>" alt="<%= album.album_name %>" height="100px"><%= album.album_name %>
                    </a>
                </li>
            <% }); %>
        </ul>
    </div>

    <div class="songs-list">
        <h2>Songs</h2>
        <ul id="artist-home-song-list">
            <% tracks.forEach(track => { %>
                <li>
                    <a href="#" class="song-link"
                        data-mp3-path="<%= track.track_mp3_path %>" 
                        data-title="<%= track.track_title %>" 
                        data-artist="<%= track.artist_name %>">
                    <%= track.track_title %>
                    </a>
                </li>
            <% }); %>
        </ul>
    </div>
</div>