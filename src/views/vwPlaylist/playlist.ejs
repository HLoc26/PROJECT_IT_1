<link rel="stylesheet" href="/css/playlist.css">

<div class="top-header">
  <h1 class="greeting">Hello, <%= username %>, what is your playlist to listen to today?</h1>
  <a href="/playlists/create" class="create-playlist">CREATE PLAYLIST</a>
</div>
<div class="playlist-container">
  <div class="playlist-header">
    <h1>Hear your own playlists and the playlists you've liked:</h1>
    <div class="filter-container">
      <input type="text" class="filter-input" placeholder="Filter playlists...">
      <select class="filter-select">
        <option value="">All Playlists</option>
        <option value="mine">My Playlists</option>
        <option value="liked">Liked Playlists</option>
      </select>
    </div>
  </div>

  <div class="playlist-scroll">
    <% playlists.forEach(playlist => { %>
      <!-- Playlist Card -->
      <div class="playlist-card" data-playlist-id="<%= playlist.playlist_id %>" data-type="<%= playlist.type %>">
        <div class="playlist-image">
          <img src="<%= playlist.cover_image || '/default-cover.jpg' %>" alt="Playlist cover">
        </div>
        <p class="playlist-title"><%= playlist.playlist_name %></p>
        <p class="playlist-creator">
          Created by: <%= playlist.creator_name %>
        </p>
      </div>
    <% }); %>
  </div>
</div>



    <!-- Add more playlist cards as needed -->
  </div>
</div>



