<main>
    <link rel="stylesheet" href="/css/profile.css">

    <div class="profile-header">
        <div class="profile-pic-container">
            <img src="<%= target_user.user_profile_pic %>" alt="Profile Picture" class="profile-pic">
        </div>
        <div class="profile-info">
            <h1 class="user-name">
                <%= target_user.user_name %> #<%= target_user.user_id %>
            </h1>
        </div>
    </div>
    <div class="user-interact">
        <button class="follow-btn <%= followed ? 'followed' : '' %>" data-id="<%= target_user.user_id %>">
            <i class="bi <%= followed ? 'bi-person-check-fill' : 'bi-person-plus-fill' %>"></i>
            <span>
                <%= followed ? 'Followed' : 'Follow' %>
            </span>
        </button>
    </div>
    <div class="main-container">
        <div class="left-container">
            <div class="row-container">
                <div class="playlist-container-header">
                    <h1>Public playlists</h1>
                    <a href="/playlists">See more</a>
                </div>
                <% if (playlists.length> 0) { %>
                    <%- include("../partials/playlist", {playlists: playlists}) %>
                <% } else { %>
                    <h3 class="empty-noti">Looks like this user have not created any public playlist...</h3>
                <% } %>
            </div>
            <div class="row-container">
                <h1>Liked artists</h1>
                <div class="artist-container">
                    <% if (liked_artists.length> 0) { %>
                        <ul class="artist-list">
                            <% liked_artists.forEach(artist=> { %>
                                <li class="artist-card">
                                    <a href="/artists/<%= artist.artist_id %>" class="artist-link">
                                        <div class="artist-image-container">
                                            <img src="<%= artist.artist_pic_path %>" alt="<%= artist.artist_name %>"
                                                class="artist-image" width="100px">
                                            <div class="artist-overlay"></div>
                                        </div>
                                        <p class="artist-name">
                                            <%= artist.artist_name %>
                                        </p>
                                    </a>
                                </li>
                                <% }); %>
                        </ul>
                        <% } else {%>
                            <h3 class="empty-noti">Looks like this user does not liked any artist...</h3>
                        <% } %>
                </div>
            </div>
        </div>
        <div class="right-container">
            <div class="row-container stats-container">
                <div class="stats">
                    <span class="stats-name">Follower</span>
                    <span class="stats-value">
                        <%= follower_count %>
                    </span>
                </div>
                <div class="stats">
                    <span class="stats-name">Following</span>
                    <span class="stats-value">
                        <%= following_count %>
                    </span>
                </div>
                <div class="stats">
                    <span class="stats-name">Tracks</span>
                    <span class="stats-value">
                        <%= tracks_count %>
                    </span>
                </div>
            </div>
        </div>
    </div>
</main>